{
  "name": "machinepack-paystack",
  "version": "0.1.0",
  "description": "Communicate with the Paystack API to initialize transaction, create plans, etc.",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "mocha"
  },
  "keywords": [
    "Paystack",
    "payments",
    "payment-processing",
    "credit-card",
    "machines",
    "machinepack"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:sailcastshq/machinepack-paystack.git"
  },
  "author": "Kelvin Omereshone<kelvin@sailscasts.com>",
  "license": "MIT",
  "dependencies": {
    "@sailshq/lodash": "^3.10.4",
    "machine": "^12.2.5",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "dotenv": "^8.2.0",
    "eslint": "^7.19.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "mocha": "^8.2.1"
  },
  "machinepack": {
    "friendlyName": "Paystack",
    "machineDir": "machines",
    "machines": [
      "create-plan",
      "list-plans",
      "list-banks",
      "list-providers",
      "list-countries",
      "list-states",
      "resolve-card-bin",
      "resolve-account-number",
      "resolve-bvn-premium",
      "resolve-bvn-standard",
      "verify-bvn-match",
      "initialize-transaction",
      "create-refund",
      "list-refunds",
      "fetch-refund",
      "fetch-plan",
      "update-plan",
      "create-subscription",
      "list-subscriptions",
      "fetch-subscription",
      "enable-subscription",
      "disable-subscription",
      "verify-transaction"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  }
}
